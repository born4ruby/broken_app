            %th{:sortkey => "4", :style => "width: 200px", :value => "Location"} Location
            %th{:sortkey => "5", :value => "Close Date"} Close Date
  .panel.panel-default
    .panel-heading
      %h3.panel-title Listings
    .panel-body
      %table.table.table-striped.table-condensed.sortable

      %h3.panel-title Transactions Closing In The Next 30 Days
    .panel-body
      %table.table.table-striped.table-condensed.sortable
        %thead
          %tr
            %th{:sortkey => "0", :style => "width: 300px", :value => "Transaction Name"} Transaction Name
            %th{:sortkey => "1", :style => "width: 100px", :value => "Status"} Status
            %th{:sortkey => "2", :style => "width: 200px", :value => "Checklist"} Checklist
